{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "no-restricted-syntax": "off",
    "no-plusplus": "off",
    "guard-for-in": "off",
    "no-await-in-loop": "off"
  },
  "overrides": [
    {
      "files": ["__tests__/**/*"],
      "env": {
        "jest": true
      }
    }
  ]
}
